<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/credit_item_width"
    android:layout_height="@dimen/credit_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCreditPoster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/credit_item_image_height"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <TextView
            android:id="@+id/tvCreditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_margin="4dp"
            tools:text="Title"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text_main"/>

        <TextView
            android:id="@+id/tvCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Role"
            android:textSize="14sp"
            android:textColor="@color/text_hint"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>