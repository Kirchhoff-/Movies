<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Movie details -->
    <style name="MovieDetails" />

    <style name="MovieDetails.InfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/movie_details_info_text_drawable_padding</item>
    </style>

    <style name="MovieDetails.SectionTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="MovieDetails.SupportText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Tv details -->
    <style name="TvDetails" />

    <style name="TvDetails.InfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvDetails.SupportText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
</resources>
